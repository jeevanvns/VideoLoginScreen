<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ansh.com.videosplash.VideoViewCustom
        android:id="@+id/vv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:gravity="center"
            android:text="M"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/onelinebutton_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_transe_border"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_user" />

            <View
                android:layout_width="@dimen/dp_half"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:background="@color/color_white" />

            <EditText
                style="@style/RobotoEditTextStyle"
                android:id="@+id/et_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="1"
                android:hint="First Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_transe_border"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_user" />

            <View
                android:layout_width="@dimen/dp_half"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:background="@color/color_white" />

            <EditText
                style="@style/RobotoEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="1"
                android:hint="Last Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_transe_border"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_email" />

            <View
                android:layout_width="@dimen/dp_half"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:background="@color/color_white" />

            <EditText
                style="@style/RobotoEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:hint="Email Address" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_transe_border"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_mobile" />

            <View
                android:layout_width="@dimen/dp_half"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:background="@color/color_white" />

            <EditText
                style="@style/RobotoEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:layout_weight="1"
                android:hint="Mobile No" />

        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/shape_button"
            android:text="Submit"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>